<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:id="@+id/btnReset"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFinish"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#4e4ed3"
        android:text="Reset" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="30dp"
        android:text="Finish Workout" />

    <TextView
        android:id="@+id/tvWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Workout"
        android:textSize="18sp" />

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:gravity="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnStart_stop"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReset"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#4ed34e"
        android:text="Start" />

</RelativeLayout>