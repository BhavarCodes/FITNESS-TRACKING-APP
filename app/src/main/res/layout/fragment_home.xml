<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/tvWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCalories"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Workouts"
        android:textColor="#6AA3F1"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Workouts" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="TextView"
        android:textColor="#6AA3F1"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Hello Name" />

    <ImageView
        android:id="@+id/ivDate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvUserName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        tools:src="@drawable/calendar"
        tools:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/ivDate"
        tools:src="@android:drawable/ic_menu_my_calendar"
        tools:text="Apr 27 " />

    <ImageView
        android:id="@+id/ivActivity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ivDate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:src="@android:drawable/ic_menu_recent_history"
        app:srcCompat="@drawable/workouttime"
        tools:src="@drawable/workouttime"
        tools:srcCompat="@drawable/workouttime" />

    <TextView
        android:id="@+id/tvActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/ivActivity"
        tools:text="65" />

    <ImageView
        android:id="@+id/ivCalories"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ivActivity"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/calories" />

    <TextView
        android:id="@+id/tvCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="-1dp"
        android:layout_toEndOf="@+id/ivCalories"
        tools:text="100" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWorkouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvWorkout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>